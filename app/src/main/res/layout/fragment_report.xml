<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:clickable="true"
    android:focusable="true"
    android:paddingTop="@dimen/_10sdp"
    android:paddingHorizontal="@dimen/_10sdp"
    android:backgroundTint="@color/main_back_ground_color"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvReport"
        android:layout_width="0dp"
        android:textSize="@dimen/_25sdp"
        android:fontFamily="@font/mukta_medium"
        android:text="@string/report"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@color/app_text_color"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tvDropdownMenu"
        android:layout_width="0dp"
        android:padding="@dimen/_5sdp"
        android:textSize="@dimen/_18sdp"
        android:fontFamily="@font/mukta_medium"
        android:text="@string/week"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/app_text_color"
        android:layout_height="wrap_content"
        android:drawablePadding="@dimen/_5sdp"
        app:drawableEndCompat="@drawable/id_drop_down" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/tvReport"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.tabs.TabLayout
                android:layout_width="match_parent"
                app:layout_constraintTop_toTopOf="parent"
                android:id="@+id/tabLayout"
                app:tabGravity="center"
                app:tabIndicatorHeight="0dp"
                app:tabMode="auto"
                app:tabTextAppearance="@style/CustomTabText"
                android:background="@color/main_back_ground_color"
                app:tabBackground="@drawable/tab_layout_background"
                app:tabTextColor="#617D79"
                app:tabSelectedTextColor="@color/white"
                android:layout_height="@dimen/_34sdp"/>

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/viewPager"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_width="match_parent"
                app:layout_constraintTop_toBottomOf="@id/tabLayout"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/viewPager"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="vertical"
                android:padding="@dimen/_14sdp"
                android:layout_marginVertical="@dimen/_14sdp"
                app:layout_constraintBottom_toTopOf="@id/view"
                android:background="@drawable/bg_corner_10_white">
                <TextView
                    android:id="@+id/tv_average"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/mukta_medium"
                    android:gravity="center|start"
                    android:text="@string/the_average_value"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_16ssp"
                    />
                <LinearLayout
                    android:id="@+id/avg_score"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    app:layout_constraintBottom_toTopOf="@id/view"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <LinearLayout
                            android:id="@+id/view_step"
                            android:layout_width="wrap_content"
                            android:background="@color/white"
                            android:orientation="vertical"
                            android:gravity="center"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:layout_height="wrap_content">


                            <LinearLayout
                                android:gravity="center"
                                android:orientation="horizontal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <ImageView
                                    android:src="@drawable/ic_step"
                                    android:layout_gravity="center"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>

                                <TextView
                                    android:id="@+id/step"
                                    android:layout_width="wrap_content"
                                    android:textSize="@dimen/_24sdp"
                                    android:text="1234"
                                    android:singleLine="true"
                                    android:paddingHorizontal="@dimen/_5sdp"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:fontFamily="@font/mukta_semi_bold"
                                    android:textColor="@color/app_text_color"
                                    android:layout_height="wrap_content"/>

                                <TextView
                                    android:text="@string/steps"
                                    android:singleLine="true"
                                    android:ellipsize="end"
                                    android:layout_gravity="center|start"
                                    android:gravity="center|bottom"
                                    android:textSize="@dimen/_14sdp"
                                    android:textColor="@color/color_neutra_gray"
                                    android:fontFamily="@font/mukta_light"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>

                            </LinearLayout>

                            <TextView
                                android:id="@+id/increaseIndexStep"
                                android:layout_gravity="start|center"
                                android:gravity="center"
                                android:visibility="gone"
                                android:layout_marginStart="@dimen/_30sdp"
                                android:layout_width="wrap_content"
                                android:text="+123"
                                android:fontFamily="@font/mukta_medium"
                                android:textColor="@color/green"
                                android:textSize="@dimen/_15ssp"
                                android:layout_height="wrap_content"/>

                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/view_calories"
                            android:layout_width="wrap_content"
                            android:background="@color/white"
                            android:orientation="vertical"
                            android:gravity="center"
                            app:layout_constraintLeft_toLeftOf="@id/view_step"
                            app:layout_constraintTop_toBottomOf="@id/view_step"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:layout_height="wrap_content">


                            <LinearLayout
                                android:gravity="center"
                                android:orientation="horizontal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <ImageView
                                    android:src="@drawable/ic_calories"
                                    android:layout_gravity="center"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>

                                <TextView
                                    android:id="@+id/calorie"
                                    android:layout_width="wrap_content"
                                    android:textSize="@dimen/_24sdp"
                                    android:text="1234"
                                    android:singleLine="true"
                                    android:paddingHorizontal="@dimen/_5sdp"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:fontFamily="@font/mukta_semi_bold"
                                    android:textColor="@color/app_text_color"
                                    android:layout_height="wrap_content"/>

                                <TextView
                                    android:text="@string/kcal"
                                    android:singleLine="true"
                                    android:ellipsize="end"
                                    android:layout_gravity="center|start"
                                    android:gravity="center|bottom"
                                    android:textSize="@dimen/_14sdp"
                                    android:textColor="@color/color_neutra_gray"
                                    android:fontFamily="@font/mukta_light"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>

                            </LinearLayout>

                            <TextView
                                android:id="@+id/increaseIndexCalories"
                                android:layout_gravity="start|center"
                                android:gravity="center"
                                android:visibility="gone"
                                android:layout_marginStart="@dimen/_30sdp"
                                android:layout_width="wrap_content"
                                android:text="+123"
                                android:fontFamily="@font/mukta_medium"
                                android:textColor="@color/green"
                                android:textSize="@dimen/_15ssp"
                                android:layout_height="wrap_content"/>

                        </LinearLayout>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginLeft="@dimen/_30sdp"
                        android:orientation="vertical">
                        <LinearLayout
                            android:id="@+id/view_distance"
                            android:layout_width="wrap_content"
                            android:background="@color/white"
                            android:orientation="vertical"
                            android:gravity="center"
                            app:layout_constraintLeft_toLeftOf="@id/view_hour"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            android:layout_height="wrap_content">


                            <LinearLayout
                                android:gravity="center"
                                android:orientation="horizontal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <ImageView
                                    android:src="@drawable/ic_distance"
                                    android:layout_gravity="center"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>

                                <TextView
                                    android:id="@+id/distance"
                                    android:layout_width="wrap_content"
                                    android:textSize="@dimen/_24sdp"
                                    android:text="1234"
                                    android:singleLine="true"
                                    android:paddingHorizontal="@dimen/_5sdp"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:fontFamily="@font/mukta_semi_bold"
                                    android:textColor="@color/app_text_color"
                                    android:layout_height="wrap_content"/>

                                <TextView
                                    android:text="@string/km"
                                    android:singleLine="true"
                                    android:ellipsize="end"
                                    android:layout_gravity="center|start"
                                    android:gravity="center|bottom"
                                    android:textSize="@dimen/_14sdp"
                                    android:textColor="@color/color_neutra_gray"
                                    android:fontFamily="@font/mukta_light"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>

                            </LinearLayout>

                            <TextView
                                android:id="@+id/increaseIndexDistance"
                                android:layout_gravity="start|center"
                                android:gravity="center"
                                android:visibility="gone"
                                android:layout_marginStart="@dimen/_30sdp"
                                android:layout_width="wrap_content"
                                android:text="+123"
                                android:fontFamily="@font/mukta_medium"
                                android:textColor="@color/green"
                                android:textSize="@dimen/_15ssp"
                                android:layout_height="wrap_content"/>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/view_hour"
                            android:layout_width="wrap_content"
                            android:background="@color/white"
                            android:orientation="vertical"
                            android:gravity="center"
                            app:layout_constraintTop_toBottomOf="@id/view_distance"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintLeft_toLeftOf="@id/view_distance"
                            android:layout_height="wrap_content">


                            <LinearLayout
                                android:gravity="center"
                                android:orientation="horizontal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <ImageView
                                    android:src="@drawable/ic_time"
                                    android:layout_gravity="center"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>

                                <TextView
                                    android:id="@+id/time"
                                    android:layout_width="wrap_content"
                                    android:textSize="@dimen/_24sdp"
                                    android:text="1234"
                                    android:singleLine="true"
                                    android:paddingHorizontal="@dimen/_5sdp"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:fontFamily="@font/mukta_semi_bold"
                                    android:textColor="@color/app_text_color"
                                    android:layout_height="wrap_content"/>

                                <TextView
                                    android:text="@string/h"
                                    android:singleLine="true"
                                    android:ellipsize="end"
                                    android:layout_gravity="center|start"
                                    android:gravity="center|bottom"
                                    android:textSize="@dimen/_14sdp"
                                    android:textColor="@color/color_neutra_gray"
                                    android:fontFamily="@font/mukta_light"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>

                            </LinearLayout>

                            <TextView
                                android:id="@+id/increaseIndexTime"
                                android:layout_gravity="start|center"
                                android:gravity="center"
                                android:visibility="gone"
                                android:layout_marginStart="@dimen/_30sdp"
                                android:layout_width="wrap_content"
                                android:text="+123"
                                android:fontFamily="@font/mukta_medium"
                                android:textColor="@color/green"
                                android:textSize="@dimen/_15ssp"
                                android:layout_height="wrap_content"/>

                        </LinearLayout>


                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>


            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_height="@dimen/_130sdp"/>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>