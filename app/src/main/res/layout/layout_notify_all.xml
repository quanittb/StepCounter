<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingHorizontal="@dimen/_10sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="@dimen/_4sdp"
                    android:src="@drawable/ic_shose_noti"/>
                <TextView
                    android:id="@+id/tv_number_step"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1080"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="@dimen/_16ssp"
                    android:fontFamily="@font/mukta_semi_bold"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/_4sdp"
                android:background="#ECF1F6"

                />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"

                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="@dimen/_4sdp"
                    android:src="@drawable/ic_calo_noti"/>

                <TextView
                    android:id="@+id/tv_number_calo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/mukta_semi_bold"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="1080"
                    android:textSize="@dimen/_16ssp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#ECF1F6"
                android:layout_margin="@dimen/_4sdp"
                />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="@dimen/_4sdp"
                    android:src="@drawable/ic_timer_noti"/>
                <TextView
                    android:id="@+id/tv_timer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="1h 39m"
                    android:textSize="@dimen/_16ssp"
                    android:fontFamily="@font/mukta_semi_bold"
                    />
            </LinearLayout>
        </LinearLayout>

        <ProgressBar
            android:id="@+id/determinateBar"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_7sdp"
            android:progressDrawable="@drawable/custom_progress_drawable"
            android:max="100"
            android:layout_marginVertical="@dimen/_6sdp"
            />

        <ProgressBar
            android:id="@+id/determinateBar2"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_7sdp"
            android:progressDrawable="@drawable/custom_progress_drawable_two"
            android:max="100"
            android:visibility="gone"

            android:layout_marginVertical="@dimen/_6sdp"
            />

        <ProgressBar
            android:id="@+id/determinateBar3"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_7sdp"
            android:progressDrawable="@drawable/custom_progress_drawable_three"
            android:max="100"
            android:visibility="gone"

            android:layout_marginVertical="@dimen/_6sdp"
            />

        <ProgressBar
            android:id="@+id/determinateBar4"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_7sdp"
            android:progressDrawable="@drawable/custom_progress_drawable_four"
            android:max="100"
            android:visibility="gone"
            android:layout_marginVertical="@dimen/_6sdp"
            />
    </LinearLayout>
</LinearLayout>