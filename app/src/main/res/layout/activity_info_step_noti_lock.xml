<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_12sdp"
        android:layout_marginBottom="@dimen/_16sdp"
        android:background="@drawable/bg_content_noti_lock"
        android:backgroundTint="#B4F333"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent">

    <LinearLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_12sdp"
        android:paddingVertical="@dimen/_8ssp"
        android:paddingHorizontal="@dimen/_10ssp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/logo"
            android:layout_width="@dimen/_20ssp"
            android:layout_height="@dimen/_20ssp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:src="@mipmap/ic_app_launcher_q"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/logo"
            app:layout_constraintBottom_toBottomOf="@id/logo"
            app:layout_constraintLeft_toRightOf="@id/logo"
            android:text="@string/app_name"
            android:textSize="@dimen/_12sdp"
            android:layout_marginLeft="@dimen/_3ssp"
            android:fontFamily="@font/mukta_medium"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/btn_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add"
            android:textSize="@dimen/_12ssp"
            android:fontFamily="@font/mukta_regular"
            android:textColor="#86B81B"
            android:background="@drawable/bg_content_noti_lock"
            android:paddingHorizontal="@dimen/_10ssp"
            android:paddingVertical="@dimen/_2ssp"
            android:drawablePadding="@dimen/_2ssp"
            android:drawableStart="@drawable/ic_add"/>
    </LinearLayout>
        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/transparent"
            app:layout_constraintBottom_toBottomOf="@id/title"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view"
            android:background="@drawable/bg_content_noti_lock"
            android:paddingVertical="@dimen/_10ssp"
            android:paddingHorizontal="@dimen/_2ssp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/add_your_steps_to_track_your_health_in_the_most_intuitive_way"
                android:fontFamily="@font/mukta_medium"
                android:textColor="@color/black"
                android:textSize="@dimen/_16ssp"
                android:gravity="center"
                android:paddingHorizontal="@dimen/_20ssp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10ssp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/day"
                        android:textColor="#3E3E3E"
                        android:textSize="@dimen/_14ssp"
                        android:fontFamily="@font/mukta_semi_bold"/>
                    <TextView
                        android:id="@+id/txt_day"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/mukta_bold"
                        android:textColor="#86B81B"
                        android:text="0"
                        android:textSize="@dimen/_18ssp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/week"
                        android:textColor="#3E3E3E"
                        android:textSize="@dimen/_14ssp"
                        android:fontFamily="@font/mukta_semi_bold"/>
                    <TextView
                        android:id="@+id/txt_week"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/mukta_bold"
                        android:textColor="#FFA901"
                        android:text="2345"
                        android:textSize="@dimen/_18ssp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/month"
                        android:textColor="#3E3E3E"
                        android:textSize="@dimen/_14ssp"
                        android:fontFamily="@font/mukta_semi_bold"/>
                    <TextView
                        android:id="@+id/txt_month"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/mukta_bold"
                        android:textColor="#FF6004"
                        android:text="2345"
                        android:textSize="@dimen/_18ssp"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>