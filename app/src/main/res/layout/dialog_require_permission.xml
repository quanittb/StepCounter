<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#33FFFFFF">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_gender_dialog"
        android:paddingBottom="@dimen/_10sdp"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_14sdp"
            android:src="@drawable/ic_permission_dialog"/>

            <TextView
                android:id="@+id/txtTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/permission_required"
                android:textSize="@dimen/_24sdp"
                android:fontFamily="@font/mukta_semi_bold"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:textColor="#173430"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/to_make_sure_app_work_properly"
            android:textSize="@dimen/_16sdp"
            android:fontFamily="@font/mukta_regular"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:textColor="#434E58"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginVertical="@dimen/_11sdp"
            android:layout_marginHorizontal="@dimen/_14sdp">
            <ImageView
                android:id="@+id/img1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/txt1"
                app:layout_constraintBottom_toBottomOf="@id/txt1"
                android:src="@drawable/ic_lock_protected"/>
            <TextView
                android:id="@+id/txt1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/protected_apps"
                android:fontFamily="@font/mukta_medium"
                android:textColor="@color/black"
                app:layout_constraintTop_toTopOf="parent"
                android:paddingLeft="@dimen/_5sdp"
                app:layout_constraintLeft_toRightOf="@id/img1"
                android:textSize="@dimen/_16sdp"/>
            <ImageView
                android:id="@+id/img2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/img1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/txt2"
                app:layout_constraintBottom_toBottomOf="@id/txt2"
                android:src="@drawable/ic_auto_start"/>
            <TextView
                android:id="@+id/txt2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/auto_start"
                android:fontFamily="@font/mukta_medium"
                android:textColor="@color/black"
                app:layout_constraintTop_toBottomOf="@id/txt1"
                app:layout_constraintLeft_toRightOf="@id/img2"
                android:paddingLeft="@dimen/_5sdp"
                android:textSize="@dimen/_16sdp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <TextView
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:id="@+id/btnGrant"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/allow"
            android:fontFamily="@font/mukta_semi_bold"
            android:textSize="@dimen/_18sdp"
            android:gravity="center"
            android:textColor="@color/black"
            android:background="@drawable/bg_save"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>