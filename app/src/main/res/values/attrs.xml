<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr format="string" name="fontPath" />
    <declare-styleable name="CustomColumChart">
        <attr name="columnRadius" format="integer"/>
        <attr name="defaultColor" format="color"/>
        <attr name="selectedColor" format="color"/>
        <attr name="textVerticalColor" format="color"/>
        <attr name="textHorizontalColor" format="color"/>
        <attr name="textVerticalSize" format="integer"/>
        <attr name="textHorizontalSize" format="integer"/>
        <attr name="textTopBoxSize" format="dimension"/>
        <attr name="textBottomBoxSize" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="BMIChart">
        <attr name="boxColor" format="color"/>
        <attr name="textBoxColor" format="color"/>
        <attr name="bmiHeight" format="integer"/>
        <attr name="clickable" format="boolean"/>
    </declare-styleable>
    <declare-styleable name="CalorieChart">
        <attr name="strokeWith" format="integer"/>
        <attr name="strokeColor" format="color"/>
    </declare-styleable>
</resources>